package com.atm;

import java.util.ArrayList;

public class Database {

	int id=0;
	 static ArrayList<Customer> a=new ArrayList<Customer>();
	 Customer c1;
	public void add(Customer c)
	{
		id++;
		c.setUserId(id);
		
		a.add(c);
		System.out.println(c);
	}
	public void remove(int id)
	{
		a.remove(id-1);
		System.out.println("removed");
	}
	public void showAll()
	{
		for(Customer c:a)
		{
			System.out.println(c);
		}
	}
	public void showById(int id)
	{
		System.out.println(a.get(id-1));
	}
	
	public  boolean contains(Customer c)
	{
		return a.contains(c);
//		String name=c.getUserName();
//		for(Customer c1:a)
//		{
//			if(c1.getUserName().equals(name)) {
//				return true;
//			}
//		}
//		return false;
	}
	public void deposit(double amt)
	{
		c1.setAmt(c1.getAmt()+amt);
		a.set(c1.getUserId()-1, c1);
		System.out.println("Amount deposited");
		return;
	}
	public void transaction() {
		// TODO Auto-generated method stub
		
	}
	public void withdraw(double amt) {
		// TODO Auto-generated method stub
		if(c1.getAmt()>=amt)
		{
			c1.setAmt(c1.getAmt()-amt);
			a.set(c1.getUserId()-1, c1);
			System.out.println("Amount withdraw");
			
		}
		else {
			System.out.println("withdraw failed");
		}
		return ;
	}
	public void tranfer(long accountNo, double amt) {
		for(Customer cust:a)
		{
			if(cust.getAccNo()==accountNo)
			{
				cust.setAmt(cust.getAmt()+amt);
				a.set(c1.getUserId()-1, c1);
				System.out.println("Amount transfered successfully");
			}
		}
		System.out.println("Account number Not Matched");
		return ;
	}
}
